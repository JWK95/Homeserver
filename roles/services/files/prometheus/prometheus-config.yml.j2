global:
  scrape_interval: 15s

scrape_configs:
  - job_name: '{{ prometheus_name }}'
    static_configs:
      - targets: ['{{ prometheus_name }}.{{ docker_network_name }}:{{ prometheus_port }}']

  - job_name: '{{ node_exporter_name }}'
    static_configs:
      - targets: ['{{ node_exporter_name }}.{{ docker_network_name }}:{{ node_exporter_port }}']